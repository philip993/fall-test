{{#if user}}
<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="/users/profile">Welcome {{user}}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/posts/all">Public Posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/posts/private">Private Posts</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Drafts</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <h5 class="card-title">Personal Information</h5>
        <p class="card-text">First Name: {{firstName}}</p>
        <p class="card-text">Last Name: {{lastName}}</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>
{{else}}
<p>No user logged in</p>
{{/if}}