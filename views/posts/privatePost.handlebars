<div class="container">
    {{#each posts}}
    <div class="card text-center" style="margin: auto; padding-top: 15px; padding-bottom: 15px; margin-top: 15px; margin-bottom: 15px; width: 60%; height: 100%;">
        <div class="card-header">
            <span style="float: right;">
                Author: {{username.username}}
            </span>

            <span style="float: left">Type: {{typeOfPost}}</span>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{content}}</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
        <div class="card-footer text-muted">
            {{dateCreated}}
        </div>
    </div>
    {{else}}
    <div class="alert alert-secondary" role="alert">
        No Posts yet!
    </div>
    {{/each}}
</div>