<div class="container">
  <h1>Post form</h1>
  <form action="/posts/all" method="POST">
    <div class="form-group">
      <label for="title">Title </label>
      <input type="text" class="form-control" id="title" placeholder="title" name="title" value="{{title}}">
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" id="content" rows="3" name="content"></textarea>
    </div>
    <div class="form-group">
      <label for="typeOfPost">Post Type</label>
      <select class="form-control" id="typeOfPost" name='typeOfPost'>
        <option> ---- </option>
        <option>Public</option>
        <option>Private</option>
        <option>Draft</option>
        <option>Announcement</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>