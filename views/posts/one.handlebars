<h1>One post</h1>
{{#if post}}
<div class="card">
    <h3>{{post.title}}</h3>
    <p>{{post.content}}</p>
    <h3>Comment section</h3>
    <div class="container">
        {{#each comments}}
        <p>{{bodyComment}}</p>
        {{else}}
        <p>No comments yet</p>
    </div>
    {{/each}}
</div>
{{else}}
<p>smt wrong</p>
{{/if}}
<h1>Comment Form</h1>
<form action="/posts/comments" method="POST" style="width: 45%; magin: auto; padding-top: 20px;">
    <input type="hidden" name='linked' value="{{post._id}}">
    <div class="form-group">
        <label for="bodyComment">Comment </label>
        <input type="text" class="form-control" id="bodyComment" placeholder="comment" name="bodyComment">
    </div>
    <button type="submit" class="btn btn-primary">Comment </button>
</form>